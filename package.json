{
  "name": "merge-classes",
  "version": "1.3.0",
  "description": "Function aware of CSS modules when merging CSS classes.",
  "license": "Apache-2.0",
  "main": "build",
  "scripts": {
    "clean": "rimraf \"build/!(.git)\"",
    "build": "npm run clean && babel src -d build -s",
    "dev": "npm run clean && run-p dev:*",
    "dev:lib": "babel src -d build -sw",
    "dev:tests": "jest --testMatch=\"**/tests/**/*.js\" --watch",
    "start": "npm run dev",
    "test": "jest --testMatch=\"**/tests/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borela/merge-classes.git"
  },
  "bugs": {
    "url": "https://github.com/borela/merge-classes/issues"
  },
  "homepage": "https://github.com/borela/merge-classes#readme",
  "keywords": [
    "css",
    "merge",
    "modules",
    "simple"
  ],
  "author": {
    "name": "Alexandre Borela",
    "email": "alexandre@borela.tech",
    "url": "http://www.borela.tech"
  },
  "devDependencies": {
    "babel-preset-ctrine-lib": "^1.0.0",
    "ctrine-dev-preset": "^4.0.0"
  }
}
