{
  "name": "merge-classes",
  "version": "1.0.9",
  "description": "Function aware of CSS modules when merging CSS classes.",
  "main": "build",
  "scripts": {
    "check": "flow check || exit 0",
    "clean": "rimraf \"build/!(.git)\"",
    "build": "run-s build:*",
    "build:clean": "npm run clean",
    "build:target": "babel ./src --out-dir ./build --source-maps",
    "dev": "run-s dev:*",
    "dev:clean": "npm run clean",
    "dev:target": "babel ./src --out-dir ./build --watch --source-maps",
    "start": "npm run dev"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties",
      "transform-export-extensions",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "latest",
        {
          "es2015": {
            "modules": "commonjs"
          }
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borela/merge-classes.git"
  },
  "keywords": [
    "css",
    "merge",
    "modules",
    "simple"
  ],
  "author": [
    {
      "name": "Alexandre Borela",
      "email": "alexandre@borela.tech",
      "url": "http://www.borela.tech"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/borela/merge-classes/issues"
  },
  "homepage": "https://github.com/borela/merge-classes#readme",
  "dependencies": {
    "ctrine-preset-node": "^1.0.0"
  },
  "devDependencies": {
    "ctrine-preset-node-dev": "^1.0.0"
  }
}
