{
  "name": "merge-classes",
  "version": "1.0.4",
  "description": "Function aware of CSS modules when merging CSS classes.",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && npm-run-all --parallel build:*",
    "build:babel": "babel ./src --out-dir ./lib --source-maps",
    "prepublish": "npm run build",
    "watch": "npm run clean && npm-run-all --parallel watch:*",
    "watch:babel": "babel ./src --out-dir ./lib --watch --source-maps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borela/merge-classes.git"
  },
  "keywords": [
    "css",
    "merge",
    "modules",
    "simple"
  ],
  "author": [{
    "name": "Alexandre Borela",
    "email": "alexandre@borela.tech",
    "url": "http://www.borela.tech"
  }],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/borela/merge-classes/issues"
  },
  "homepage": "https://github.com/borela/merge-classes#readme",
  "main": "./lib",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "npm-run-all": "^3.1.1",
    "rimraf": "^2.5.2"
  }
}
